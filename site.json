---
layout: nil
---

{  "site": 
      {
        "pages":
	  [
	{% for post in site.posts %}
	  {% if post.type == "page" %}
	  {
		"url":"{{post.url}}",
		"title"    : "{{ post.title }}",
		"content"  : {{ post.content | jsonify }}
	  }
	     {% if forloop.last %}{% else %},{% endif %}
	  {% endif %}
	{% endfor %}]
	
      ,
      "posts":
	{
	{% for post in site.posts %}
	"{{ post.url }}":
	{
	    "title"    : "{{ post.title }}",
	    "date"     : "{{ post.date | date: "%B %d, %Y" }}",
	    "content"  : {{ post.content | jsonify }}
	} {% if forloop.last %}{% else %},{% endif %}
	{% endfor %}
	}
  }
  }
